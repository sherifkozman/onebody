- @title = t('admin.custom_fields.heading')

%p= t('admin.custom_fields.intro')

- if @fields.any?
  %table.table
    %tr
      %th= CustomField.human_attribute_name(:name)
      %th= CustomField.human_attribute_name(:format)
    - @fields.each do |field|
      %tr
        %td= field.name
        %td= t('admin.custom_fields.formats')[field.format.to_sym]
        %td.actions
          = link_to edit_administration_custom_field_path(field), class: 'btn btn-info btn-xs' do
            = icon 'fa fa-pencil'
          = link_to administration_custom_field_path(field), class: 'btn btn-delete btn-xs', data: { method: 'delete', confirm: t('are_you_sure') } do
            = icon 'fa fa-trash-o'

.page-controls.push-down
  = link_to 'New Field', new_administration_custom_field_path, class: 'btn btn-success'
